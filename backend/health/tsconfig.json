{
  "compilerOptions": {
    /* runtime */
    "target": "ES2020",
    "module": "CommonJS",

    /* paths & output */
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    /* strictness */
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    /* interop */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
