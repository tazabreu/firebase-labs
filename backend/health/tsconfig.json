{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "resolveJsonModule": true,   // <-- lets TS treat .json as modules
      "outDir": "dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }
  